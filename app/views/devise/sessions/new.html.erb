

<%#= render "devise/shared/links" %>
<div class="container">
  <br/>
  <br/>
  <br/>
  <br/>
  <center> <b id="login-name">LOGIN Here </b> </center>
  <div class="row">
    <div class="col-md-6 col-md-offset-3" id="login">  
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
        <label class="user"> UserName  </label>
        <div class="input-group">
          <span class="input-group-addon" id="iconn"> <i class="glyphicon glyphicon-user"></i></span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", placeholder: "email", id: "text1" %>
        </div>
          
        </div>

        <div class="form-group">
        <label class="user"> Password </label>
        <div class="input-group">
          <span class="input-group-addon" id="iconn1"> <i class="glyphicon glyphicon-lock"></i></span>
        <%= f.password_field :password, :class => "form-control", autocomplete: "current-password", placeholder: "password", id: "text2" %>
        </div>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="form-group">

        <input type="submit" class="btn btn-success" value="login" style="border-radius:0px;">
        <input type="reset" class="btn btn-danger" value="reset" style="border-radius:0px;">

            </div>
            <br/><br/><br/>
            <a href="/users/password/new" style="color: white; font-size: 15px; float: right; margin-right: 10px;"> Forget Password </a>
            <a href="/users/sign_up" style="color: white; font-size: 15px; float: right; margin-right: 10px;"> Register </a>
      <% end %>
    </div>
  </div>
</div>



